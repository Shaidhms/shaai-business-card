{
  "functions": {
    "api/send-email.js": {
      "maxDuration": 60
    },
    "api/chat.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=(*), microphone=(*)"
        }
      ]
    }
  ]
}
